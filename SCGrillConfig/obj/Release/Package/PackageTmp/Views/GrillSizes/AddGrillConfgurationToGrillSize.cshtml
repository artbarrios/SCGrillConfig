@model SCGrillConfig.Models.GrillSizeGrillConfgurationViewModel

@{
    ViewBag.Title = "AddGrillConfgurationToGrillSize";
}

<h2>Grill Size: @Html.DisplayFor(model => model.GrillSize_Name)</h2>
<h4>Add Grill Confguration To Grill Size</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.GrillSizeId)
        @Html.HiddenFor(model => model.GrillSize_Name)

        @if (((SelectList)ViewBag.GrillConfgurationId).Count() > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.GrillConfguration_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("GrillConfgurationId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.Raw("<b>All available Grill Confgurations have been added to this Grill Size.</b>")
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to GrillSize Detail", "Details", new { id = Model.GrillSizeId } )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}