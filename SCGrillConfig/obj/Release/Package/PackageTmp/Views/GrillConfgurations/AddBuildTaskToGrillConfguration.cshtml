@model SCGrillConfig.Models.BuildTaskGrillConfgurationViewModel

@{
    ViewBag.Title = "AddBuildTaskToGrillConfguration";
}

<h2>Grill Confguration: @Html.DisplayFor(model => model.GrillConfguration_Name)</h2>
<h4>Add Build Task To Grill Confguration</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.GrillConfgurationId)
        @Html.HiddenFor(model => model.GrillConfguration_Name)

        @if (((SelectList)ViewBag.BuildTaskId).Count() > 0)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.BuildTask_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("BuildTaskId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    @Html.Raw("<b>All available Build Tasks have been added to this Grill Confguration.</b>")
                </div>
            </div>
        }
    </div>
}

<div>
    @Html.ActionLink("Back to GrillConfguration Detail", "Details", new { id = Model.GrillConfgurationId } )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}